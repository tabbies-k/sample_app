<p id="notice"><%= notice %></p>

<h1>商談一覧</h1>

<table class="table">
  <thead>
    <tr>
      <th>担当者</th>
      <th>候補者</th>
      <th>企業名</th>
      <th>ステータス</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @records.each do |record| %>
      <tr>
        <td><%= record.user_id %></td>
        <td><%= record.candidate %></td>
        <td><%= record.client %></td>
        <td><%= record.state %></td>
        <td><%= link_to '詳細', record %></td>
        <td><%= link_to edit_record_path(record) do %>
          <span class="fa fa-edit edit"></span>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

